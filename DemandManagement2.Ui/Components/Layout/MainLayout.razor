@inherits LayoutComponentBase
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="dm-shell">
    <aside class="dm-sidebar">
        <div class="dm-sidebar__brand">
            <img src="barloworld-logo.png" alt="Barloworld Equipment" class="dm-brand__logo" />
        </div>

        <div class="dm-sidebar__nav">
            <NavMenu />
        </div>

        <div class="dm-sidebar__footer">
            <div class="dm-small">v1.0 • Internal</div>
        </div>
    </aside>

    <div class="dm-main">
        <header class="dm-topbar">
            <div class="dm-topbar__left">
                <div class="dm-topbar__title">Dashboard</div>
                <div class="dm-topbar__hint">Track, assess and prioritize demand</div>
            </div>

            <div class="dm-topbar__right">
                <AuthorizeView>
                    <Authorized>
                        <span class="dm-topbar__user">@context.User.Identity?.Name</span>
                        <span class="dm-topbar__role">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                        <button class="dm-topbar__link" @onclick="Logout">Sign Out</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="dm-topbar__link">Sign In</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </header>

        <main class="dm-content">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="dm-error">
    <div class="dm-error__box">
        <div class="dm-error__title">Something went wrong</div>
        <div class="dm-error__text">An unhandled error has occurred.</div>
        <div class="dm-error__actions">
            <a href="." class="dm-btn dm-btn--ghost reload">Reload</a>
            <button type="button" class="dm-btn dm-btn--primary dismiss">Dismiss</button>
        </div>
    </div>
</div>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}

<style>
/* ===== Theme tokens ===== */
:root{
  --dm-bg: #000;
  --dm-surface: #111;
  --dm-border: rgba(255,205,17,.18);
  --dm-text: rgba(255,255,255,.92);
  --dm-muted: rgba(255,255,255,.68);
  --dm-faint: rgba(255,255,255,.48);
  --dm-primary: #ffcd11;
  --dm-primary-2: #e6b000;
  --dm-info: #ffcd11;
  --dm-shadow: 0 20px 60px rgba(0,0,0,.55);
}

/* ===== App background + typography ===== */
html, body{
  height: 100%;
}
body{
  margin: 0;
  color: var(--dm-text);
  background: #000;
}

/* ===== Shell layout ===== */
.dm-shell{
  min-height: 100vh;
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 16px;
  padding: 16px;
  box-sizing: border-box;
}

/* ===== Sidebar ===== */
.dm-sidebar{
  border: 1px solid var(--dm-border);
  border-radius: 18px;
  background: rgba(255,255,255,.035);
  box-shadow: var(--dm-shadow);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.dm-sidebar__brand{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 14px 16px;
  background: #000;
  border-bottom: 1px solid var(--dm-border);
}

.dm-brand__logo{
  width: 100%;
  max-width: 210px;
  height: auto;
  object-fit: contain;
  display: block;
  border-radius: 6px;
}

.dm-sidebar__nav{
  padding: 10px;
  flex: 1;
}

.dm-sidebar__footer{
  padding: 12px 16px;
  border-top: 1px solid var(--dm-border);
  color: var(--dm-faint);
  background: rgba(0,0,0,.10);
}

.dm-small{ font-size: 12px; }

/* ===== Main surface ===== */
.dm-main{
  border: 1px solid var(--dm-border);
  border-radius: 18px;
  background: rgba(255,255,255,.03);
  box-shadow: var(--dm-shadow);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* ===== Topbar ===== */
.dm-topbar{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 16px;
  border-bottom: 1px solid var(--dm-border);
  background: rgba(0,0,0,.60);
}

.dm-topbar__title{
  font-weight: 900;
  letter-spacing: -.01em;
}
.dm-topbar__hint{
  font-size: 12.5px;
  color: var(--dm-faint);
  margin-top: 2px;
}

.dm-topbar__right{
  display: flex;
  align-items: center;
  gap: 10px;
}

.dm-topbar__user{
  font-weight: 800;
  color: var(--dm-text);
  font-size: 13px;
}

.dm-topbar__role{
  padding: 4px 8px;
  border-radius: 999px;
  background: rgba(255,205,17,.15);
  border: 1px solid rgba(255,205,17,.35);
  color: #ffcd11;
  font-size: 11px;
  font-weight: 800;
}

.dm-topbar__link{
  color: var(--dm-text);
  text-decoration: none;
  padding: 8px 10px;
  border-radius: 12px;
  border: 1px solid var(--dm-border);
  background: rgba(255,255,255,.04);
  cursor: pointer;
  font-size: 13px;
  font-weight: 700;
  transition: transform .12s ease, background .12s ease;
}
.dm-topbar__link:hover{
  transform: translateY(-1px);
  background: rgba(255,255,255,.07);
}

/* ===== Content area ===== */
.dm-content{
  padding: 18px;
}

/* ===== Buttons (shared) ===== */
.dm-btn{
  border: 1px solid var(--dm-border);
  padding: 10px 14px;
  border-radius: 12px;
  cursor: pointer;
  font-weight: 750;
  transition: transform .12s ease, background .12s ease, border-color .12s ease;
}
.dm-btn--primary{
  background: linear-gradient(180deg, var(--dm-primary), var(--dm-primary-2));
  color: #111;
  border-color: rgba(255,205,17,.55);
  font-weight: 800;
}
.dm-btn--primary:hover{ transform: translateY(-1px); }
.dm-btn--ghost{
  background: rgba(255,255,255,.04);
  color: var(--dm-text);
}
.dm-btn--ghost:hover{ transform: translateY(-1px); background: rgba(255,255,255,.07); }

/* ===== Blazor error UI ===== */
.dm-error{
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 16px;
  z-index: 9999;
  display: none; /* Blazor toggles this element visibility when errors occur */
}

/* If Blazor shows it by inline styles, it will override this anyway */
#blazor-error-ui{
  /* keep default mechanism working */
}

.dm-error__box{
  max-width: 560px;
  border: 1px solid var(--dm-border);
  border-radius: 16px;
  background: rgba(18,18,18,.97);
  padding: 14px 16px;
  box-shadow: var(--dm-shadow);
}

/* ===== Nav links ===== */
.nav-link{
  color: var(--dm-muted) !important;
  border-radius: 10px;
  padding: 8px 12px !important;
  font-size: 13.5px;
  font-weight: 600;
  transition: background .15s ease, color .15s ease;
}
.nav-link:hover{
  color: var(--dm-text) !important;
  background: rgba(255,205,17,.08);
}
.nav-link.active{
  color: #111 !important;
  background: var(--dm-primary) !important;
  font-weight: 800;
}

.dm-error__title{ font-weight: 900; }
.dm-error__text{ color: var(--dm-muted); margin-top: 2px; }
.dm-error__actions{ display:flex; gap: 10px; margin-top: 10px; }

/* ===== Responsive ===== */
@@media (max-width: 900px){
  .dm-shell{
    grid-template-columns: 1fr;
  }
  .dm-sidebar{
    order: 2;
  }
  .dm-main{
    order: 1;
  }
}
</style>