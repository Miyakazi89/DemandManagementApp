@rendermode InteractiveServer
@inject AuthenticationStateProvider AuthStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Demand Management</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler')?.click()">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.Prefix">
                <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span>
                Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="demands" Match="NavLinkMatch.Prefix">
                <span class="bi bi-list-task-nav-menu" aria-hidden="true"></span>
                Demand Requests
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="demands/new" Match="NavLinkMatch.Prefix">
                <span class="bi bi-plus-circle-nav-menu" aria-hidden="true"></span>
                Submit New Request
            </NavLink>
        </div>

        @if (_isAdminOrAssessor)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="prioritization" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-bar-chart-steps-nav-menu" aria-hidden="true"></span>
                    Prioritization
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="capacity" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span>
                    Capacity Planning
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="reports" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-file-earmark-bar-graph-nav-menu" aria-hidden="true"></span>
                    Reports
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="budget" Match="NavLinkMatch.Prefix">
                    <span class="bi bi-currency-dollar-nav-menu" aria-hidden="true"></span>
                    Budget & Finance
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private bool _isAdminOrAssessor;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var role = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
        _isAdminOrAssessor = role == "Admin" || role == "Assessor";
    }
}
